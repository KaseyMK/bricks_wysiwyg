{#
/**
 * @file
 * Default theme implementation for a three-column 1:2:1 layout.
 *
 * Bootstrap classes provide three columns at b400 with a 1:2:1 width ratio.
 * https://getbootstrap.com/docs/4.0/layout/grid/
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'row',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>

    {% if content.first %}
      <div {{ region_attributes.first.addClass('col-xs-4 col-sm-3') }}>
        {{ content.first }}
      </div>
    {% endif %}

    {% if content.second %}
      <div {{ region_attributes.second.addClass('col-xs-4 col-sm-6') }}>
        {{ content.second }}
      </div>
    {% endif %}

    {% if content.third %}
      <div {{ region_attributes.third.addClass('col-xs-4 col-sm-3') }}>
        {{ content.third }}
      </div>
    {% endif %}

  </div>
{% endif %}
